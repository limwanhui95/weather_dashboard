<script>
    var forecastDataString = '<%-JSON.stringify(weatherData.forecast.forecastday)%>'
    var forecastData = JSON.parse(forecastDataString);
    var chartYData =[];
    var chartXData = [];
    try{
        for(let i=0;i<24;i++) {
            chartYData.push(forecastData[0].hour[i].<%- ylabel %>);
            chartXData.push(getHour(i));
        }
        const chartData = {
            labels: chartXData,
            datasets: [{
                data: chartYData,
                borderColor: 'rgba(255, 228, 196,0.5)',
                fill: {
                    target: 'origin',
                    above: '#F5F5DC',
                }
            }]
        };
        const option = {
            plugins: {
               legend: false,
               datalabels: {
                color: "black",
                font: {
                    weight: "normal",
                },
                align: "end",
                offset: 2,
                display: function(context){
                    return context.dataIndex % 2;
                },
                <% if (locals.formatter) { %>
                    <%= formatter %>,
                <% } %>
               },
               tooltip: {
                enabled: false,
               },
               title: {
                display: true,
                text: "<%- chartTitle %>",
                padding: {
                    top: 10,
                    bottom: 10,
                },
                font: {
                    size: 20,
                    weight: "bold",
                    
                },
                color: "black",
               },
            },
            scales: {
                x: {
                    border:{
                        display: false,
                    },
                    grid: {
                        display: false,
                    },
                    ticks: {color: "rgba(0,0,0,0.8)",}, 
                },
                y: {
                    border:{
                        display: false,
                    },
                    grid:{
                        display: false,
                    },
                    ticks: {display: false},
                    grace: '30%',
                }    
            },
            elements: {
                point: {
                    pointRadius: "0",
                },
            },
            events: [],
            maintainAspectRatio: false,
        };
        Chart.register(ChartDataLabels);
        new Chart(
        document.getElementById('<%- chartID %>'),
        {
          type: 'line',
          data: chartData,
          options: option
        }
        );
        console.log(chartData);
    } catch (error) {
        console.log(error);
    }
    function getHour(str){
        if(str<12) {
            return str+" am";
        }
        else if(str==12) {
            return str+" pm";
        }
        else {
            return (str-12)+" pm";
        }
    }
</script>